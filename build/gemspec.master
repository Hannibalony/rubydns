
Dir.chdir("../") do
  Gem::Specification.new do |s|
    s.name = "RubyDNS"
    s.version = "0.1.2"
    s.date = "2009-08-26"
    s.summary = "A simple DNS server DSL for Ruby."
    s.homepage = "http://wiki.oriontransfer.org/code:rubydns.git"
    s.has_rdoc = true
    s.authors = ["Samuel Williams"]
    s.files = FileList["{lib,test}/**/*"] + ["README.rdoc"]
    
    s.extra_rdoc_files = ["README.rdoc"]
    s.rdoc_options << '--main' << 'README.rdoc'

    s.add_dependency("net-mdns")
    s.add_dependency("rexec")
  end
end

